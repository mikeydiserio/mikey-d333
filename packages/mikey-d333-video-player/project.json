{
  "name": "@mikey-d333/video-player",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/video-player/src",
  "projectType": "library",
  "tags": [],
  "targets": {
    "build": {
      "executor": "@nx/vite:build",
      "outputs": [
        "{workspaceRoot}/packages/mikey-d333-video-player/dist"
      ],
      "options": {
        "configFile": "{workspaceRoot}/packages/mikey-d333-video-player/vite.config.ts",
        "outputPath": "{workspaceRoot}/packages/mikey-d333-video-player/dist",
        "assets": [
          {
            "glob": "**/*",
            "input": "src/assets",
            "output": "./assets"
          }
        ]
      }
    },
    "test": {
      "executor": "@nx/vite:test",
      "outputs": [
        "{workspaceRoot}/coverage/mikey-d333-video-player"
      ],
      "options": {
        "passWithNoTests": true,
        "reportsDirectory": "../../coverage/mikey-d333-video-player"
      }
    },
    "nx-release-publish": {
      "options": {
        "packageRoot": "dist/{projectRoot}"
      }
    }
  },
  "release": {
    "version": {
      "manifestRootsToUpdate": [
        "dist/{projectRoot}"
      ],
      "currentVersionResolver": "git-tag",
      "fallbackCurrentVersionResolver": "disk"
    }
  }
}
