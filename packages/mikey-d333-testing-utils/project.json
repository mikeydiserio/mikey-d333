{
  "name": "@mikey-d333/testing-utils",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/testing-utils/src",
  "projectType": "library",
  "tags": [
    "ui lib testing-utils"
  ],
  "targets": {
    "build": {
      "executor": "@nx/vite:build",
      "outputs": [
        "{workspaceRoot}/packages/mikey-d333-testing-utils/dist"
      ],
      "options": {
        "configFile": "{workspaceRoot}/packages/mikey-d333-testing-utils/vite.config.ts",
        "outputPath": "{workspaceRoot}/packages/mikey-d333-testing-utils/dist",
        "assets": [
          {
            "glob": "**/*",
            "input": "src/assets",
            "output": "./assets"
          }
        ]
      }
    },
    "test": {
      "executor": "@nx/vite:test",
      "outputs": [
        "{workspaceRoot}/coverage/mikey-d333-testing-utils"
      ],
      "options": {
        "passWithNoTests": true,
        "reportsDirectory": "../../coverage/mikey-d333-testing-utils"
      }
    }
  },
  "nx-release-publish": {
    "options": {
      "packageRoot": "dist/{projectRoot}"
    }
  },
  "release": {
    "version": {
      "manifestRootsToUpdate": [
        "dist/{projectRoot}"
      ],
      "currentVersionResolver": "git-tag",
      "fallbackCurrentVersionResolver": "disk"
    }
  }
}
